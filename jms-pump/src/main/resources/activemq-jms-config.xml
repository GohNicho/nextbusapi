<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context-3.0.xsd">
             
    <!-- JMS Client setup for ActiveMQ 5.5 -->
            
    <bean id="amq_connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory" lazy-init="true">
        <property name="brokerURL" value="${nbpumper.activemq.endpoint}" />
    </bean>
   
    <bean id="amq_queue" class="org.apache.activemq.command.ActiveMQQueue" lazy-init="true">
        <constructor-arg value="${nbpumper.destination}" />
    </bean>
    <bean id="amq_topic" class="org.apache.activemq.command.ActiveMQTopic" lazy-init="true">
        <constructor-arg value="${nbpumper.destination}" />
    </bean>
    
</beans>